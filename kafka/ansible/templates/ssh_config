{% for group in groups -%}
{% if group != "all"  and group != "local" -%}
{% for host in groups[group] -%}
{% set ip = hostvars[host].public_ip -%}
host {{ host }}
    User ubuntu
    HostName {{ ip }}
    IdentityFile ssh_keys/kafka-key

{# ansible uses the IP address darnit #}
host {{ ip }}
    User ubuntu

